/* miniprogram/pages/tabNews/news.wxss */
.page{
  background-color: #eeeeee;
}

.user_item{
  display: flex;
  margin: 5rpx 5rpx 5rpx 5rpx;
  border: 1px solid #dadada;
  background-color: #ffffff;
  height: 120rpx;
  vertical-align: center; /**垂直居中*/
  align-items: center;    /**子view垂直居中*/
  border-right: 15rpx;
  border-left: 15rpx;
  border-radius: 15rpx;
}

.user_icon{
  margin-left: 10rpx;
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
}
.user_name{
  font-size: 28rpx;
  color: #646464;
  margin-left: 30rpx;
}

.message{
  margin-top: 10rpx;
  margin-left: 30rpx;
  font-size: 25rpx;
}
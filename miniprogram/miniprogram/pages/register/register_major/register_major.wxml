<!--miniprogram/pages/operation/operation.wxml-->
<view class="container">
  <form bindsubmit="formSubmit">
    <view class="top">最后...</view>
    <view class="row">
      <input type="text" name="major" placeholder="请输入专业中文全称" value="{{major}}" bindinput="input_major"></input>
      <view class="hide">是否展示：
        <switch checked bindchange="input_major_hide" checked="{{true}}" color="#50D2C2"></switch>
      </view>
      <view class="userinfo-img">
        <view class="divLine"></view>
        <button type="primary" bindtap="onTap">提交</button>
        <view class="divLine"></view>
      </view>
    </view>
  </form>
</view>
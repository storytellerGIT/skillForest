/* miniprogram/pages/operation/operation.wxss */
.container{
  padding: 0;
  font-size: 16rpx;
  color: #000;
}

.row{
  display: flex;
  flex-direction: column;
  width: 675rpx;
  height: 200rpx;
  background: #ffffff;
  padding: 50rpx 0;
  margin: 15rpx 0 10rpx 0;
  border-top: 1px solid #eee;
}

.row text{
  text-align: right;
}

.row input{
  font-size: 0.7rem;
  flex-grow: 3;
  border: 1px solid #0099CC;
  display: inline-block;
  border-radius: 0.3rem;
  box-shadow: 0 0 0.15rem #aaa;
  padding: 10rpx 0;
  margin: 50rpx 0 30rpx 0;
}

.row button{
  font-size: 32rpx;
  background-color: #94c6ee;
  border-radius: 98rpx;
}

.row button::after {
  border-radius: 98rpx;
}

.userinfo-img{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.divLine{
  align-self: canter;
  background: #E0E3DA;
  width: 35%;
  height: 2rpx;
}

.top{
  color: #000;
  font-size: 40rpx;
  font-weight: 900;
  padding-left: 32rpx;
  margin: 50rpx 0 75rpx 0;
  display: block;
}

.hide{
  font-size: 28rpx;
  font-weight: 600;
  margin-left: 20rpx;
  margin-top: 10rpx;
  padding-bottom: 40rpx;
}

.wx-switch-input{
    width:82rpx !important;
    height:36rpx !important;
}
/*白色样式（false的样式）*/
.wx-switch-input::before{
    width:80rpx !important;
    height: 36rpx !important;
}
/*绿色样式（true的样式）*/
.wx-switch-input::after{
    width: 40rpx !important;
    height: 36rpx !important;
}

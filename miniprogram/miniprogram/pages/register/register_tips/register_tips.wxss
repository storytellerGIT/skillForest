/* miniprogram/pages/operation/operation.wxss */
.container{
  padding: 0;
  font-size: 16rpx;
  color: #000;
}

.row{
  display: flex;
  flex-direction: column;
  width: 675rpx;
  height: 200rpx;
  background: #ffffff;
  padding: 50rpx 0;
  margin: 15rpx 0 10rpx 0;
  border-top: 1px solid #eee;
}

.row button{
  font-size: 32rpx;
  background-color: #94c6ee;
  border-radius: 98rpx;
}

.row button::after {
  border-radius: 98rpx;
}

.userinfo-img{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.divLine{
  align-self: canter;
  background: #E0E3DA;
  width: 35%;
  height: 2rpx;
}

.top{
  color: #000;
  font-size: 40rpx;
  font-weight: 900;
  padding-left: 32rpx;
  margin: 50rpx 0 75rpx 0;
  display: block;
}

.middle{
  color: #000;
  font-size: 38rpx;
  font-weight: 400;
  padding-left: 32rpx;
  margin: 50rpx 0 75rpx 0;
  text-align: left;
}

.rule{
  width:100%;  
  font-size: 40rpx;
  display: flex;
  position: fixed;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: rgb(88, 107, 149);
  text-align: center;
  text-decoration:underline;
  bottom: 30rpx;
}

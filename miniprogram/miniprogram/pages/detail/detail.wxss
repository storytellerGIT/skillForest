/* miniprogram/pages/detail/detail.wxss */
page{
  background: -webkit-linear-gradient(left,rgb(255, 255, 255),rgb(233, 233, 233),rgb(240, 240, 240));
}

.detail_item{
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
  background: -webkit-linear-gradient(left,rgb(255, 255, 255),rgb(233, 233, 233),rgb(240, 240, 240));
  color: rgb(88, 90, 92);
  padding: 0;
}

.user_part{
  height: 120rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 10rpx;
}

.user_icon{
  width: 100rpx;
  height: 100rpx;
  vertical-align: middle;
  margin-top: 10rpx;
  margin-left: 10rpx;
  border-radius: 50%;
}

.user_name{
  margin-left: 20rpx;
}


.myitem-icon{
  width: 60rpx;
  height: 60rpx;
  padding: 27.5rpx 0;
}

.myitem-icon1{
  width: 60rpx;
  height: 60rpx;
  padding: 28rpx 0;
  justify-content: center;  
}

.time_part{
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 40rpx;
  border-radius: 20rpx;
  /* box-shadow: 0px 2px 5px #dfdede; */
}

.text{
  flex: 5;
  text-align: left;
  font-size: 38rpx;
  color: #6d6d6d;
  padding: 30rpx 0 0 0;
}

.text1{
  flex: 5;
  text-align: left;
  font-size: 36rpx;
  color: #6d6d6d;
}

.contact_part{
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 120rpx;
  border-radius: 20rpx;
  /* box-shadow: 0px 2px 5px #dfdede; */
}

.detail_part
{
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 40rpx;
  border-radius: 20rpx;
}

.lianxifangshi{
  display: flex;
  flex-direction: row;
  margin-left: 40rpx;
  border-radius: 20rpx;
  /* box-shadow: 0px 2px 5px #dfdede; */
}

.button_part{
  display:flex;   
  margin: 15rpx 15rpx 15rpx 15rpx;
  align-items: center;
  justify-content: center;
  flex-direction: row;
  
}

.button_part button{
  background-color: #ffffff;
  border-radius: 98rpx;
}

.button_part .but{
  background-color: #b8b2b2;
}

.button_part button::after {
  border-radius: 98rpx;
}

.user{
  display: flex;
  flex-direction: row;
  width: 725rpx;
  height: 200rpx;
  padding: 50rpx 0;
  margin: 15rpx 0 10rpx 0;
}

.userinfo-img{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.user .userinfo-avatar{
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.user .user-info{
  flex: 5;
  text-align: left;
}

.user .user-info text{
  display: block;
}

.user .user-info .userinfo-nickname{
  text-align: center;
  padding: 8rpx 0 0 0;
  font-size: 40rpx;
  color: rgb(88, 90, 92);
}

.user .user-info .edit{
  font-size: 28rpx;
  font: bold;
  color: #bababa;
  line-height: 34rpx;
}

.arrow{
  align-self: center;
  width: 10px;
  height: 10px;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  position: relative;
  right: 20rpx;
  transform: rotate(45deg);
  margin-top:10rpx;
}

.divLine{
 background: #E0E3DA;
 width: 20%;
 height: 2rpx;
}
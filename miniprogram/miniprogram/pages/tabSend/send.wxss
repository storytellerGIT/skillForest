.section{
  display: flex;
  flex-direction: column;
  border-style: solid;
  border-color: rgb(104, 184, 211);
  border-width: thin;
  margin: 20rpx;
  padding: 20rpx;
  justify-content: space-around;
}

.section2
{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.section3
{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title{
  font-size: 15px;
  text-align: center;
}

.picker{
  display: flex;
  justify-content: center; 
  border-style:dashed;
  border-width: thin;
  border-color: gainsboro;
  width: 20%;
}

.input_part{
  width: 90%;
  font-size: 0.7rem;
  flex-grow: 3;
  border: 1px solid #0099CC;
  display: inline-block;
  border-radius: 0.3rem;
  box-shadow: 0 0 0.15rem #aaa;
  padding: 10rpx 0;
  margin: 50rpx 0 30rpx 0;
  background-color: #fff;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

button{
  margin: 10rpx 0;
}


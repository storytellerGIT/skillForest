.hint{
  display: flex;
  flex-direction: column;
  width: 725rpx;
  height: 170rpx;
  background: #f3f7fa;
  padding: 20rpx 0;
  margin: 15rpx 0 15rpx 0;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #dcdcdc;
  box-shadow: 0 2px 2px #eeeeee;
}

.hint1{
  display: flex;
  flex-direction: column;
  width: 725rpx;
  height: 85rpx;
  background: #f3f7fa;
  padding: 20rpx 0;
  margin: 15rpx 0 15rpx 0;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #dcdcdc;
  box-shadow: 0 2px 2px #eeeeee;
}

.hint .text{
  text-align: justify;
}
.hint .text::after{
  width: 100%;

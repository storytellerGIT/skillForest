/* miniprogram/pages/tabHomeRecommend/homeRecommend.wxss */
/*轮播图整体属性  */
.body {
  padding: 0px 50rpx;
}

/*特别推荐属性  */

.title0 {
  color: #000;
  font-size: 40rpx;
  font-weight: 900;
  margin-top: 34rpx;
  display: block;
}

/*自媒体联动小程序属性  */

.title2 {
  color: #d4d2d4;
  font-size: 30rpx;
  display: block;
  padding-top: 10rpx;
}

/*轮播图属性  */

.imgsilder {
  border-radius: 25rpx;
  width: 100%;
  height: 328rpx;
  margin: 0rpx auto;
  display: block;
  /* margin-top: 15rpx; *//* border-radius: 25rpx;  */
  overflow: hidden;
  margin-top: 25rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
  border-radius: 25rpx;
}

.user_item{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  background-color: #fff;
  padding-bottom: 5px;
}

.row{
  display: flex;
  flex-direction: row;
}

.userinfo-avatar{
  width: 80rpx;
  height: 30rpx;
  border-radius: 50%;
}

.projectbox {
  padding: 0rpx 50rpx;
  position: relative;
}

.headingtext {
  font-size: 40rpx;
  color: #000;
  margin-top: 50rpx;
  display: block;
  letter-spacing: 2rpx;
  font-weight: 900;
}

.project {
  width: 650rpx;
  height: 180rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
  /* box-shadow: 0px 2px 5px #dfdede; */
  position: relative;
  border-bottom: 2rpx dashed #efeff1;

}

.headimage {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-left: 0rpx;
  margin-top: 15rpx;
  /* border:1rpx solid #ffd92e; */
}

.projecttext {
  position: absolute;
  top: 15rpx;
  left: 180rpx;
  z-index: 0;
}

.biaoti {
  font-size: 30rpx;
  color: #000;
  display: block;
}

.jianjie {
  font-size: 25rpx;
  color: #b8b8b8;
  display: block;
  margin-right: 110rpx;
  padding-top: -5rpx;
  line-height: 16px;
}

.field {
  font-size: 25rpx;
  color: #ffd92e;
  display: block;
  margin-top: 35rpx;
  position: absolute;
  top: 75rpx;
  left: 0rpx;
  z-index: 1;
}

 .openpush {
  width: 10px;
  height: 10px;
  position: absolute;
  top: 71rpx;
  right: 0rpx;
  z-index: 0;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  transform: rotate(45deg);
  margin-top:10rpx;
} 


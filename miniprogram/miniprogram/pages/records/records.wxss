/* miniprogram/pages/tabHomeRecommend/homeRecommend.wxss */

page {
  background-color: #ccc;
}

.abc{
  background-color: #ccc;
  border-top: 1px solid rgb(233, 233, 233);
  border-bottom: 1px solid rgb(233, 233, 233);
}

.user_item{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  background-color: #fff;
  padding-bottom: 5px;
}

.user_part{
  height: 120rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 10rpx;
}

.skill{
  display: flex;    /*设置显示样式**/
  align-items: center;    /**子view垂直居中*/
  vertical-align: center; /**垂直居中*/
  justify-content: center; /**内容居中*/
  flex-direction:row;
  width: 725rpx;
  height: 180rpx;
  background: #f1f1f1;
  margin-bottom: 40rpx;
  margin-left: 10rpx;
  margin-top: 20rpx;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #dcdcdc;
  box-shadow: 0 2px 2px #eeeeee;
  border-radius: 20px;
}

.skill .edit{
  font-size: 28rpx;
  font: bold;
  color: #bababa;
  line-height: 34rpx;
}

.user_icon{
  width: 100rpx;
  height: 100rpx;
  vertical-align: middle;
  margin-top: 10rpx;
  margin-left: 10rpx;
}

.user_name{
  margin-left: 20rpx;
}

.exchange_icon{
  width: 200rpx;
  height: 60rpx;
  vertical-align: middle;
  margin-right: 30rpx;
  margin-left:30rpx;
}

.clickbutton{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.myskill{
  font-size: 40rpx;
  color: rgb(88, 90, 92);
}

.wantskill{
  font-size: 40rpx;
  color: rgb(88, 90, 92);
}

.status{
  display: flex;
  flex-direction: row;
}

.status2{
  display: flex;
  flex-direction: row;
  margin-left: 30rpx;
  margin-bottom: 26rpx;
  font-size: 36rpx;
  color: rgb(88, 90, 92);
}